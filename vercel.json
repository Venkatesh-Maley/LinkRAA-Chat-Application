{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1",
            "continue": true
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}